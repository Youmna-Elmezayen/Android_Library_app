<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/parent"
    android:elevation="10dp"
    app:cardCornerRadius="15dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/compactCardView"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/old_books_436498_1280" />

            <TextView
                android:id="@+id/bookTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_marginTop="10dp"
                android:text="Book Title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bookTitle"
                android:layout_marginTop="10dp"
                android:text="Book Author"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/yearOfPublish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bookAuthor"
                android:layout_marginTop="10dp"
                android:text="Year of publish"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_down_arrow"
                android:layout_below="@+id/yearOfPublish"
                android:layout_alignParentEnd="true"
                android:id="@+id/downArrow"/>




        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/compactCardView"
            android:id="@+id/extendedCardView"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/bookDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/bookRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bookDesc"
                android:layout_marginTop="10dp"
                android:text="Rating"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookNoOfPages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bookRating"
                android:layout_marginTop="10dp"
                android:text="No of pages"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_up_arrow"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/bookNoOfPages"
                android:id="@+id/upArrow"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_below="@id/bookNoOfPages"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_alignEnd="@id/upArrow"
                android:layout_marginRight="30dp"
                android:textColor="@color/red"
                android:id="@+id/deleteBtn"/>

        </RelativeLayout>




    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>