<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.library_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Library_app">
        <activity
            android:name=".WebViewActivity"
            android:exported="false" />
        <activity
            android:name=".ReadingActivity"
            android:exported="false"
            android:label="@string/activity_reading"/>
        <activity
            android:name=".ReadActivity"
            android:exported="false"
            android:label="@string/activity_read"/>
        <activity
            android:name=".WishlistActivity"
            android:exported="false"
            android:label="@string/activity_wishlist"/>
        <activity
            android:name=".FavoritesActivity"
            android:exported="false"
            android:label="@string/activity_favorites"/>
        <activity
            android:name=".BookActivity"
            android:exported="false"
            android:label="@string/activity_book"/>
        <activity
            android:name=".AllBooksActivity"
            android:exported="false"
            android:label="@string/activity_all_books"/>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>